{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": [
          "./"
        ],
        "alias": {
          "@": "./",
          "@src": "./src",
          "@components": "./src/components",
          "@hocs": "./src/hocs",
          "@views": "./src/views",
          "@styles": "./src/styles"
        }
      }
    }
  },
  "rules": {}
}